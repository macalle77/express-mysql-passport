  <body>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-md-offset-0">
                <h1 class="text-center login-title">Accede a la aplicación</h1>
                  <div class="account-wall">
                    <!--<img class="profile-img" src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120')/>-->
                    <form class="form-signin" action="/login" method="post"/>
                      <input type="text" name="username" class="form-control" placeholder="Email" required autofocus/>
                      <input type="password" name="password" class="form-control" placeholder="Password" required/>
                      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                    </form>
                  </div>
                  <span class="clearfix"/>
                  <a href="/recordaruser" class="text-center new-account">Recordar contraseña</a>
                  <% if(message){%>
                    <h1 class="text-center error-message"><%= message %></h1>
                  <%}%>
            </div>
        </div>
    </div>
