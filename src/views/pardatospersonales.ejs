<!DOCTYPE html>
<html>
  <head>
    <% include header %>
  </head>
  <body>
    <div class="container">
      <h1><%= title %></h1>
      <!-- Static navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="home">Principal</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><a href="/home?seccion=gestionar">Datos Personales</a></li>
              <li><a href="/home?seccion=nuevaactividad">Apuntarse Actividad</a></li>
              <li><a href="/home?seccion=veractividad">Información Actividad</a></li>
              <li><a href="/signout">Cerrar Sesión</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>
      <div class="row">
          <div class="col-sm-6 col-md-4 col-md-offset-4">
              <h1 class="text-center login-title">Detalles del registro</h1>
              <div class="signup-wall">
                <form class="form-signin" action="/updateuser" method="POST">
                  <input type="text" name="dni" class="form-control" placeholder="Dni" required value="<%= user.dni %>"/>
                  <input type="text" name="nombre" class="form-control" placeholder="Nombre" required value="<%= user.nombre %>"/>
                  <input type="text" name="apellidos" class="form-control" placeholder="Apellidos" required value="<%= user.apellidos %>"/>
                  <input type="email" name="email" class="form-control" placeholder="Email", required value="<%= user.email %>"/>
                  <input type="text" name="telefono" class="form-control" placeholder="Telefono" required value="<%= user.telefono %>"/>
                  <input type="text" name="direccion" class="form-control" placeholder="Direccion" required value="<%= user.direccion %>"/>
                  <button class="btn btn-lg btn-primary btn-block" type="submit">Actualizar</button>
                  <button class="btn btn-lg btn-primary btn-block" type="reset">Cancelar</button>
                  <span class="clearfix"/>
                </form>
                <% if(message){%>
                  <h1 class="text-center error-message"><%= message %></h1>
                <%}%>
              </div>
          </div>
      </div>
    </div>
  <% include footer %>
  </body>
</html>
