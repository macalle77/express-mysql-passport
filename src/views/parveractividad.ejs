<!DOCTYPE html>
<html>
  <head>
    <% include header %>
  </head>
  <body>
    <div class="container">
      <h1><%= title %></h1>
      <!-- Static navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="home">Principal</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li><a href="/home?seccion=gestionar">Datos Personales</a></li>
              <li><a href="/home?seccion=nuevaactividad">Apuntarse Actividad</a></li>
              <li class="active"><a href="/home?seccion=veractividad">Información Actividad</a></li>
              <li><a href="/signout">Cerrar Sesión</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>
      <div class="row">
          <div class="col-sm-6 col-md-4 col-md-offset-4">
              <h2><%= actividad.titulo%></h2>
              <hr/>
              <legend>Descripción de la actividad</legend>
              <div class="form-group">
                  <textarea class="form-control" name="descripcion" rows="3" cols="80"><%= actividad.descripcion%></textarea>
              </div>
              <div class="form-group">
                <textarea class="form-control" name="requisitos" rows="3" cols="80"><%= actividad.requisitos%></textarea>
              </div>
                <% if(message){%>
                  <h1 class="text-center error-message"><%= message %></h1>
                <%}%>
              </div>
          </div>
      </div>
    </div>
  <% include footer %>
  </body>
</html>
