  <body>
    <div class="container">
          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6"><h1 style="font-family: 'Oswald', sans-serif">Recuperar acceso a la aplicación web</h1></div>
            <div class="col-md-3"></div>
          </div>
         <form class="form-horizontal" role="form" method="POST" action="/recoverpassword">
             <div class="row">
                 <div class="col-md-3"></div>
                 <div class="col-md-6">
                     <h5>Introduzca su email</h5>
                     <hr>
                 </div>
                 <div class="col-md-3"></div>
             </div>
             <div class="row">
                 <div class="col-md-3"></div>
                 <div class="col-md-6">
                     <div class="form-group has-danger">
                         <label class="sr-only" for="email">E-Mail:</label>
                         <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                           <div class="input-group-addon" style="width:2.6rem"><i class="fa fa-at"></i></div>
                           <input type="text" name="email" class="form-control" id="email" placeholder="tu@ejemplo.com" required autofocus>
                         </div>
                     </div>
                 </div>
                 <div class="col-md-3">
                     <div class="form-control-feedback">
                         <span class="text-danger align-middle">
                         <!-- Put error message here -->
                         <% if(message){%>
                           <%= message %>
                          <%}%>
                         </span>
                     </div>
                 </div>
             </div>
             <div class="row" style="padding-top: 1rem">
                 <div class="col-md-3"></div>
                 <div class="col-md-6">
                     <button type="submit" class="btn btn-success"><i class="fa fa-sign-in"></i>Recuperar Acceso</button>
                 </div>
                 <div class="col-md-3"></div>
             </div>
             <div class="row" style="padding-top: 1rem">
                 <div class="col-md-3"></div>
                 <div class="col-md-6">
                     <p>Si ya estas registrado, recibiras un correo electrónico con tu nuevo password</p>
                 </div>
                 <div class="col-md-3"></div>
             </div>
         </form>
     </div>
    <script src="/js/popper.min.js"></script>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
